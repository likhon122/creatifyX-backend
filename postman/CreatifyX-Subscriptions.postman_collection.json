{
  "info": {
    "name": "CreatifyX - Subscription Routes",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Requests covering the CreatifyX subscription purchase + admin management flow. Configure variables before running requests."
  },
  "item": [
    {
      "name": "Subscriber - Create Checkout Session",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{subscriberToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"planId\": \"{{planId}}\",\n  \"successUrl\": \"{{successUrl}}\",\n  \"cancelUrl\": \"{{cancelUrl}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/subscriptions/checkout",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "subscriptions", "checkout"]
        }
      },
      "response": []
    },
    {
      "name": "Subscriber - Verify Checkout Session",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{subscriberToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"sessionId\": \"{{checkoutSessionId}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/subscriptions/checkout/verify",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "subscriptions", "checkout", "verify"]
        }
      },
      "response": []
    },
    {
      "name": "Admin - Create Subscription (manual)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{adminToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"plan\": \"{{planId}}\",\n  \"user\": \"{{subscriberUserId}}\",\n  \"status\": \"active\",\n  \"stripeCustomerId\": \"cus_test123\",\n  \"stripeSubscriptionId\": \"sub_test123\",\n  \"currentPeriodStart\": \"{{currentPeriodStart}}\",\n  \"currentPeriodEnd\": \"{{currentPeriodEnd}}\",\n  \"cancelAtPeriodEnd\": false\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/subscriptions",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "subscriptions"]
        }
      },
      "response": []
    },
    {
      "name": "Admin - Update Subscription",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{adminToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"canceled\",\n  \"cancelAtPeriodEnd\": true\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/subscriptions/{{subscriptionId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "subscriptions", "{{subscriptionId}}"]
        }
      },
      "response": []
    },
    {
      "name": "Admin - Get Subscription",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{adminToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/subscriptions/{{subscriptionId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "subscriptions", "{{subscriptionId}}"]
        }
      },
      "response": []
    },
    {
      "name": "Admin - List Subscriptions",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{adminToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/subscriptions?status=active&page=1&limit=20",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "subscriptions"],
          "query": [
            {
              "key": "status",
              "value": "active"
            },
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "20"
            }
          ]
        }
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "adminToken",
      "value": ""
    },
    {
      "key": "subscriberToken",
      "value": ""
    },
    {
      "key": "planId",
      "value": ""
    },
    {
      "key": "successUrl",
      "value": "https://app.example.com/billing/success?session_id={CHECKOUT_SESSION_ID}"
    },
    {
      "key": "cancelUrl",
      "value": "https://app.example.com/billing/cancel"
    },
    {
      "key": "checkoutSessionId",
      "value": ""
    },
    {
      "key": "subscriptionId",
      "value": ""
    },
    {
      "key": "subscriberUserId",
      "value": ""
    },
    {
      "key": "currentPeriodStart",
      "value": "2025-01-01T00:00:00.000Z"
    },
    {
      "key": "currentPeriodEnd",
      "value": "2025-02-01T00:00:00.000Z"
    }
  ]
}
